# Specify the main entry point
entrypoint = "index.js"

# Required modules
modules = ["nodejs-20", "web", "postgresql-16"]

# Hide unnecessary files from Replit's file explorer
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Nix package settings
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
deploymentTarget = "gce"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "VITE_PORT=5173 API_PORT=5000 BOT_PORT=5001 npm run start"]
ignorePorts = false

# Port configuration - Simplified and standardized
[[ports]]
localPort = 5173
externalPort = 80  # Main public-facing port for the frontend

[[ports]]
localPort = 5000
externalPort = 5000  # Backend API

[[ports]]
localPort = 5001  # Bot service (internal only)

# Simple workflow configuration
[workflows]
runButton = "Start Development Server"

[[workflows.workflow]]
name = "Development Server"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "VITE_PORT=5173 API_PORT=5000 BOT_PORT=5001 npm run dev"
wait_for_port = 5173

# Authentication settings
[auth]
pageEnabled = false
buttonEnabled = false