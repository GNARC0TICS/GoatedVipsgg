# Specify the main entry point
entrypoint = "index.js"

# Required modules
modules = ["nodejs-20", "web", "postgresql-16"]

# Hide unnecessary files from Replitâ€™s file explorer
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Nix package settings
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
deploymentTarget = "gce"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "npm run start"]
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 80

[[ports]]
localPort = 5173

# Set up the server configuration
[server]
host = "0.0.0.0"
port = 5000

[workflows]
runButton = "Full Stack Project"

[[workflows.workflow]]
name = "Full Stack Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "API_PORT=5000 VITE_PORT=5173 BOT_PORT=5001 npm run dev"

[[workflows.workflow]]
name = "Start application"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "BOT_PORT=5001 VITE_PORT=5173 API_PORT=5000 npm run dev"
wait_for_port = 5000

# Authentication settings
[auth]
pageEnabled = false
buttonEnabled = false
