# Environment configuration for GoatedVipsGG
# Copy to .env for local development

# Environment
NODE_ENV=development
# NODE_ENV=production

# Domain configuration
ADMIN_DOMAIN=goombas.net
PUBLIC_DOMAIN=goatedvips.gg

# Port configuration
PORT=5000
VITE_PORT=5173

# Database configuration
DATABASE_URL=postgres://username:password@localhost:5432/goated_vips
# Enable SSL for production database connections
# DATABASE_SSL=true

# API Keys and tokens
# API_TOKEN=your_api_token 

# Feature flags
ENABLE_FALLBACK_API=true
DEBUG_LOGGING=true

# For Replit specific configuration
IS_REPLIT=true
