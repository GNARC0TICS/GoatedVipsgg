{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { 
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}
